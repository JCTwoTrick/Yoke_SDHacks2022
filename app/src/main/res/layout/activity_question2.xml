<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".question2">

  <TextView
      android:id="@+id/goals"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:text="What is your current activity level?"
      android:textColor="#000000"
      android:textSize="24sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.497"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.123" />

  <TextView
      android:id="@+id/textView2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Not including workouts"
      android:textColor="#BBBBBB"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.497"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.165" />

  <Button
      android:id="@+id/not_very_active"
      android:layout_width="337dp"
      android:layout_height="56dp"
      android:backgroundTint="#7ACC8F"
      android:fontFamily="@font/sf_compact_text_regular"
      android:text="Not Very Active"
      android:textAlignment="viewStart"
      android:textAllCaps="false"
      android:textSize="20sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.223" />

  <Button
      android:id="@+id/lightly_active"
      android:layout_width="337dp"
      android:layout_height="56dp"
      android:backgroundTint="#7ACC8F"
      android:fontFamily="@font/sf_compact_text_regular"
      android:text="Lightly Active"
      android:textAlignment="viewStart"
      android:textAllCaps="false"
      android:textSize="20sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.305" />

  <Button
      android:id="@+id/active"
      android:layout_width="337dp"
      android:layout_height="56dp"
      android:backgroundTint="#7ACC8F"
      android:fontFamily="@font/sf_compact_text_regular"
      android:text="Active"
      android:textAlignment="viewStart"
      android:textAllCaps="false"
      android:textColor="#FFFFFF"
      android:textSize="20sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.388" />

  <Button
      android:id="@+id/very_active"
      android:layout_width="337dp"
      android:layout_height="56dp"
      android:backgroundTint="#7ACC8F"
      android:fontFamily="@font/sf_compact_text_regular"
      android:text="Very Active"
      android:textAlignment="viewStart"
      android:textAllCaps="false"
      android:textSize="20sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.472" />

  <Button
      android:id="@+id/next1"
      android:layout_width="337dp"
      android:layout_height="56dp"
      android:backgroundTint="#7ACC8F"
      android:fontFamily="@font/sf_compact_text_regular"
      android:text="Next"
      android:textAllCaps="false"
      android:textColor="#FFFFFF"
      android:textSize="20sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.715" />

  </androidx.constraintlayout.widget.ConstraintLayout>